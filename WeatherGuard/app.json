{
  "expo": {
    "name": "WeatherGuard",
    "slug": "WeatherGuard",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/small_logo.png",
    "scheme": ["weatherguard"],
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.weatherguard.app"
    },
    "android": {
      "package": "com.weatherguard.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/small_logo.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/small_logo.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/small_logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-build-properties"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "ccffe747-5575-40a0-a93f-b830e234bd12"
      }
    }
  }
} 
